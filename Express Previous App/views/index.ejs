<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>To Do</title>
    <link rel="stylesheet" href="styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/9519e19407.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <header>
      <h1>Busy Bee To-Do List:</h1>
    </header>

    <section class="bigSec">
      <form action="/messages" method="POST">
      <input id="listInput" type="text" name="msg" value="">
      <button id="addButt" type="submit" name="button">ADD</button>
      </form>




      <section class="listContain">
        <ul class="messages" id="list">
        <% for(var i=0; i<messages.length; i++) {%>
          <li class="message">
            <span><%= messages[i].name %></span>
            <span id="<%= messages[i]._id %>"><%= messages[i].msg %></span>
            <!-- <span><%= messages[i].priority %></span> -->
            <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span> -->
            <span><i class="fas fa-trash" aria-hidden="true"></i></span>
            <span><i class="fas fa-exclamation-circle" aria-hidden="true"></i></span>
          </li>
        <% } %>
        </ul>
      </section>


      <section class="buttonContain">
        <!-- <p>Tasks: <span id="countChange">0</span></p> -->
        <button id="clearAll" type="button" name="button">Clear</button>
        <!-- <button id="clearDone" type="button" name="button">Clear finished</button> -->
      </section>
    </section>
    <script src="main.js"></script>
  </body>
</html>
